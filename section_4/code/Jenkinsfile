#!/usr/bin/groovy

node {
    		envList = "Oracle12c\nOracle19c"
	     }
pipeline {
	agent any
	

	 parameters {
        	choice(choices: "${envList}", name: 'OracleVersion', description: 'please choose the Oracle version you want to deploy?')
   
   	 }
	
	choiceArray = [ "patch" , "minor" , "major" ]


	parameters{
            choice(choices: choiceArray.collect { "$it\n" }.join(' ') ,
                    description: '',
                    name: 'SOME_CHOICE')

	}

	
	stages {

		stage('Build') {
			steps {
				echo "Building..${params.OracleVersion}"
			}
		}

		stage('Test') {
			steps {
				echo 'Testing..'
			}
		}

		stage('Deploy') {
			steps {
				echo 'Deploying....'
			}
		}

	}
}
